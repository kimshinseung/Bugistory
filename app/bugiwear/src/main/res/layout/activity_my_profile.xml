<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MyProfileActivity"
    tools:deviceIds="wear"
    android:background="@color/default_bright_ui_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_boxedEdges="all">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="나의 프로필"
            android:gravity="center"
            android:fontFamily="@font/rubik_bold"
            android:background="@drawable/post_feed_padding"
            android:elevation="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textAlignment="center"
            android:textColor="@color/default_dark_ui_color">
        </TextView>
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_smooth_border_rect"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:src="@mipmap/default_user_image"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            android:background="@drawable/round_smooth_border_rect"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/user_name"
                android:text="이름"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/default_dark_ui_color"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/phone_number"
                android:text="010-0000-0000"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/default_dark_ui_color"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/email"
                android:text="example@email.com"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/default_dark_ui_color"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.wear.widget.BoxInsetLayout>