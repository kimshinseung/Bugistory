<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_smooth_border_rect"
        android:layout_margin="5dp"
        android:elevation="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_button"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/item_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@mipmap/default_user_image"/>
            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:fontFamily="@font/rubik_bold"
                android:layout_marginStart="5dp"
                android:textSize="10dp"
                android:text="유저 이름"
                android:gravity="center"
                android:textColor="@color/default_dark_ui_color"
                app:layout_constraintStart_toEndOf="@id/item_image"
                app:layout_constraintTop_toTopOf="@id/item_image"
                />
            <TextView
                android:id="@+id/item_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="010-0000-0000"
                android:textSize="8dp"
                android:textColor="@color/gray_ui_text_color"
                app:layout_constraintStart_toStartOf="@id/item_name"
                app:layout_constraintStart_toEndOf="@id/item_image"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/item_image"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>

