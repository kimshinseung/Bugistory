<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_feed_padding"
        android:layout_margin="5dp"
        android:elevation="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@mipmap/default_user_image"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:fontFamily="@font/rubik_bold"
                android:layout_marginStart="5dp"
                android:textSize="10dp"
                android:text="유저 이름"
                android:gravity="center"
                android:textColor="@color/default_dark_ui_color"
                app:layout_constraintStart_toEndOf="@id/user_image"
                app:layout_constraintTop_toTopOf="@id/user_image"
                />
            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="2022년 11월 4일 6시 00분"
                android:textSize="8dp"
                android:textColor="@color/gray_ui_text_color"
                app:layout_constraintStart_toStartOf="@id/user_name"
                app:layout_constraintStart_toEndOf="@id/user_image"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/user_image"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/rubik_bold"
            android:textColor="@color/default_dark_ui_color"
            android:text="임시로 작성된 글 입니다.\n안녕하세요."/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/default_dark_ui_color"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <LinearLayout
                android:id="@+id/like_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/comment_button"
                android:gravity="center">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_baseline_thumb_up_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_marginStart="5dp"
                    android:textSize="10dp"
                    android:fontFamily="@font/rubik_bold"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:text="좋아요"
                    />
                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:text="00"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rubik_bold"
                    android:layout_marginStart="5dp"
                    android:gravity="bottom"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/comment_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@id/like_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_baseline_chat_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/rubik_bold"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:text="댓글"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:text="00"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rubik_bold"
                    android:layout_marginStart="5dp"
                    android:gravity="bottom"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>